<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sound"
        android:scaleType="centerCrop"
        android:alpha="0.5" /> <!-- Adjust alpha for transparency -->

    <!-- Content Layout (inside the RelativeLayout for layering) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center">

        <!-- First Row of Buttons -->

        <!-- Second Row of Buttons -->


        <TextView
            android:id="@+id/textViewLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:text="Animal Sound Recognition"
            android:textColor="#F8F8FF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="200dp"
            android:layout_height="68dp"
            android:text="Profile" />

        <Button
            android:layout_width="201dp"
            android:layout_height="69dp"
            android:text="Recognize Sound" />

        <Button
            android:layout_width="196dp"
            android:layout_height="67dp"
            android:text="My Activities" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Profile Button -->

            <!-- Recognize Sound Button -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- My Activities Button -->

            <!-- Version Button -->

            <Button
                android:layout_width="203dp"
                android:layout_height="65dp"
                android:text="Version" />

        </LinearLayout>

        <!-- Third Row for the Log Out Button -->

        <Button
            android:id="@+id/logOutButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Log Out" />
    </LinearLayout>
</RelativeLayout>
